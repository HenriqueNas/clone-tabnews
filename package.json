{
  "name": "clone-tabnews",
  "version": "1.0.0",
  "description": "Um projeto pra eu estudar juntinho com o Filipe Deschamps",
  "main": "index.js",
  "scripts": {
    "dev": "pnpm run services:up && next dev || pnpm run services:stop",
    "lint:check": "prettier --check .",
    "lint:fix": "prettier --write .",
    "test": "pnpm jest",
    "test:watch": "pnpm --watch jest",
    "services:up": "docker compose -f infra/compose.yaml up -d",
    "services:stop": "docker compose -f infra/compose.yaml stop",
    "services:down": "docker compose -f infra/compose.yaml down",
    "migration:create": "node-pg-migrate -m infra/migrations create",
    "migration:up": "node-pg-migrate -m infra/migrations up",
    "migration:down": "node-pg-migrate -m infra/migrations down"
  },
  "author": "@henriquenas",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^16.4.5",
    "next": "^13.1.6",
    "node-pg-migrate": "^7.7.1",
    "pg": "8.11.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.14",
    "@types/node": "20.6.2",
    "@types/pg": "^8.10.7",
    "@types/react": "18.2.21",
    "@types/react-dom": "^18.3.1",
    "jest": "^29.7.0",
    "postcss": "^8.4.47",
    "prettier": "^3.0.2",
    "tailwindcss": "^3.4.14",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.2",
    "typescript": "5.2.2"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  }
}
